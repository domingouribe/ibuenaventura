---
import { projectsItems } from "../../data/database";
---

{projectsItems.map((item) => (
    <div class="ProjectCard">
      <a href={item.link}>
        <img src={item.thumbnail} alt={item.alt} class="ProjectCard-image" />
      </a>

      <p class="ProjectCard-title">{item.title}</p>
      <ul class="ProjectCard-info">
        <li>
          {item.info.number} <span>dormitorios</span>
        </li>
        <li>{item.info.surface}</li>
        <li> {item.info.since} </li>
      </ul>
      <a href={item.ctaButton.link} class="ProjectCard-cta">
        {item.ctaButton.label}
      </a>
    </div>
  ))}

<style lang="scss">
  .ProjectCard {
    display: flex;
    width: 300px;
    flex-flow: column nowrap;
    background-color: rgb(209, 209, 209);
    margin: 1em 0;
    padding-bottom: 2em;
    justify-content: center;
    align-items: center;
    text-align: center;
    box-shadow: 1px 0px 12px 1px rgba(0, 0, 0, 0.34);
    -webkit-box-shadow: 1px 0px 12px 1px rgba(0, 0, 0, 0.34);
    -moz-box-shadow: 1px 0px 12px 1px rgba(0, 0, 0, 0.34);

    &-image {
      width: 100%;
    }

    &-info {
      list-style: none;
      padding: 0;
      margin: 0;
      font-size: 0.8rem;
      display: flex;
      gap: 1em;

      span {
        display: block;
      }
    }

    &-cta {
      background-color: rgb(0, 0, 0);
      color: white;
      border-radius: 2em;
      margin: 1em 0;
      padding: 0.5em 3em;
      text-decoration: none;
      font-size: 0.8em;
      transition: all 0.3s ease;

      &:hover {
        background-color: whitesmoke;
        color: rgb(0, 0, 0);
        box-shadow: 1px 0px 12px 1px rgba(0, 0, 0, 0.34);
        -webkit-box-shadow: 1px 0px 12px 1px rgba(0, 0, 0, 0.34);
        -moz-box-shadow: 1px 0px 12px 1px rgba(0, 0, 0, 0.34);
      }
    }
  }
</style>
